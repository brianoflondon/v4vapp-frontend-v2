  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "PWA: chrome",
      "url": "https://localhost:9200/",
      "webRoot": "${workspaceFolder}/src",
      // "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack://quasar-project/./src/*": "${webRoot}/*"
      },
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        // "--lang=lu-LU" // Set the locale to Luxembourg
      ]
      // ENV set by .env file in project root
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Quasar App: chrome",
      "url": "https://localhost:9000",
      "webRoot": "${workspaceFolder}/src",
      // "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack://quasar-project/./src/*": "${webRoot}/*"
      }
    }
  ]
}
